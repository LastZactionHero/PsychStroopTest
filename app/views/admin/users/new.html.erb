<h1>Add New Study User</h1>

<% if @user.invalid? %>
  This email address is already taken.
<% end %>

<%= form_for( @user, :url => admin_users_path ) do |f| %>
	<table>	
		<tr><td><%= f.label "Email" %></td><td><%= text_field_tag "email" %></td></tr>
		<tr><td></td><td><%= f.submit %></td></tr>
	</table>
<% end %>